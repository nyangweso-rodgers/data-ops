<yandex>
    <users>
        <default>
            <!-- access management -->
            <access_management>1</access_management> <!-- allowing the user to manage access rights -->
            <profile>default</profile><!--Set to use the â€œdefaultâ€ profile defined above-->
            <networks>
                <ip>::/0</ip><!--Allows connections from any IP (::/0)-->
            </networks>
            <named_collection_control>1</named_collection_control>
            <show_named_collections>1</show_named_collections>
            <show_named_collections_secrets>1</show_named_collections_secrets>
        </default>
        <!-- Transaction service user -->
        <transaction_user>
            <password>secure_password</password>
            <profile>default</profile>
            <networks>
                <ip>::/0</ip>
            </networks>
            <quota>default</quota>
            <access_management>1</access_management>
        </transaction_user>
    </users>
</yandex>